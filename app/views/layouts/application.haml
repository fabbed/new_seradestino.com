!!! XML
!!! Strict
%html{html_attrs("es")}
  %head
    %meta{content_type_attrs("text/html")}
    :erb
      <meta name="verify-v1" content="nd/clabopIlPDTbgXhlNswgrO2uUSa2CABjvYNlSAaU=">
      <link rel=”shortcut icon” href=”favicon.ico” type=”image/x-icon”> 
    %title=yield(:title)

    = render :partial => "shared/js_and_css"
    /[if IE 7]
      =stylesheet_link_tag "iefixes_v7"
    /[if IE 6]
      =stylesheet_link_tag "iefixes_v6"
  %body{:id=>controller.controller_name}
    .wrapper{:id => controller.action_name}
      #main
        #header
          #logo
            =link_to "", root_path, :id => "sera_destino_logo"
          #sub_header
            .login
              .links
                -unless logged_in?
                  =link_to t("top_login.register"), signup_path
                  =link_to t("top_login.login"), login_path
                -else
                  =link_to t("top_login.my_account"), my_account_path, :style => "margin-left: 80px; margin-right: 60px;"
                  =link_to t("top_login.logout"), logout_path
            #right
              =link_to(image_tag("btn_contar_nueva_historia.png"), new_story_path, :id => :new_history)
            #header_text
              =t "global.introduction_text"
        #content
          =yield(:sidebar)
          #middle.fix
            =yield(:top)
            #content_main_wrapper
              #content_main
                - unless flash.empty?
                  #flash_message
                    = content_tag :div, flash[:success],  :class => "success"  if flash[:success]
                    = content_tag :div, flash[:info],     :class => "info" if flash[:info]
                    = content_tag :div, flash[:error],   :class => "error"   if flash[:error]
                  :javascript
                    #{visual_effect :highlight, "flash"}
                = yield
                = yield(:main)
              #content_footer
                = yield(:footer)
                #cat
                  =image_tag "footer_cat.png", :id => "footer_cat"

          #end.fix.font_14
            =image_tag "footer_moon.png", :id => "footer_moon"
            =link_to t("global.terms"), terms_path, :id => "terms_link", :class => "fr"

    #inside_right $nbsp;
    =yield(:javascript)

    #spinner
      =image_tag "loading.gif"

    = render :partial => "shared/google_analytics" if production?
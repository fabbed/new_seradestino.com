!!! XML
!!! Strict
%html{html_attrs("es")}
  %head
    %meta{content_type_attrs("text/html")}
    %title=yield(:title)
    = javascript_include_tag 'jquery-1.3.2.min.js', 'jrails.js', 'jquery.validate.pack.js', 'jquery.timer.js', 'application.js', 'jquery.dimensions.js', 'jquery.form.js', 'jquery.corners.js', 'facebox', 'jquery.tooltip.pack.js', 'measure'
    =stylesheet_link_tag "reset"
    =stylesheet_link_tag "generic"
    =stylesheet_link_tag "llamada_tables"

  %body
    #content
      .container_16
        .grid_16#header
        .grid_7#navigation
        .grid_9
          .introduction_text


        .grid_16#main.round_corners.back_white.padding_10
          = yield
        .clear
              
    = yield :javascript
    
    -if flash[:notice]
      =render :partial => "shared/flash_message", :locals => {:message => flash[:notice]}

